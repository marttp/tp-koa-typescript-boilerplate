{
    "compilerOptions": {
        "target": "ES2017",
        "module": "commonjs",
        "outDir": "./dist",
        "sourceMap": true,
        "removeComments": true,
        "noImplicitAny": false,
        "preserveConstEnums": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
        "typeRoots": [
          "node_modules/@types",
          "typings"
        ]
      },
      "compileOnSave": false,
      "includes": [
        "src/**/*"
      ],
      "exclude": [
        "node_modules",
        "dist"
      ]
}