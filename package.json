{
  "name": "koa-starter-boilerplate",
  "version": "1.0.0",
  "description": "The beginning of koa.js framework for who want to learn more than express.js",
  "main": "dist/server.js",
  "scripts": {
    "dev": "nodemon --watch src -e ts,tsx --exec ts-node src/server.ts",
    "build-ts": "tsc",
    "serve": "node dist/server.js",
    "build": "npm run build-ts",
    "start": "npm run serve"
  },
  "keywords": [
    "Koa.js",
    "Node.js",
    "starter",
    "boilerplate"
  ],
  "author": "Thanaphoom Babparn",
  "license": "ISC",
  "dependencies": {
    "@koa/cors": "^2.2.3",
    "@types/axios": "^0.14.0",
    "axios": "^0.19.0",
    "dotenv": "^8.2.0",
    "koa": "^2.11.0",
    "koa-bodyparser": "^4.2.1",
    "koa-helmet": "^5.2.0",
    "koa-router": "^7.4.0",
    "moment": "^2.24.0",
    "winston": "^3.2.1",
    "winston-daily-rotate-file": "^4.4.0"
  },
  "devDependencies": {
    "@types/koa": "^2.11.0",
    "@types/koa-bodyparser": "^4.3.0",
    "@types/koa-helmet": "^3.1.2",
    "@types/koa-router": "^7.0.42",
    "@types/koa__cors": "^2.2.3",
    "@types/winston": "^2.4.4",
    "nodemon": "^2.0.2",
    "ts-node": "^8.5.4",
    "typescript": "^3.7.3"
  }
}
